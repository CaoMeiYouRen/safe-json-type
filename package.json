{
  "name": "safe-json-type",
  "version": "0.3.0-beta",
  "keywords": [
    "json",
    "safe-json"
  ],
  "author": "CaoMeiYouRen",
  "description": "将json中不支持的Date和Bytes(Buffer)用安全的方法序列化，并在反序列化后找回对应的类型（而不是字符串）",
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.test.ts -R nyan",
    "deploy-beta": "npm run test && nrm use npm && npm publish --tag beta",
    "deploy": "npm run test && nrm use npm && npm publish",
    "build": "tsc -p tsconfig.build.json && npm run browser",
    "browser": "webpack --config ./webpack.config.js",
    "prebuild": "rimraf dist",
    "commit": "git add . && git cz",
    "release": "release-it --config ./.release-it.js",
    "changelog": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "postchangelog": "npm run commit"
  },
  "browser": "dist/browser.min.js",
  "jsdelivr": "dist/browser.min.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/CaoMeiYouRen/safe-json-type",
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/safe-json-type/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CaoMeiYouRen/safe-json-type.git"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.0",
    "@types/parse-json": "^4.0.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "conventional-changelog-cmyr-config": "^1.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "release-it": "^12.4.3",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "buffer": "^5.4.3",
    "colors": "^1.4.0",
    "fast-safe-stringify": "^2.0.7",
    "parse-json": "^5.0.0",
    "safe-json-type-plugins": "^0.1.1-beta"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "changelog": {
    "emojis": true,
    "authorName": false,
    "authorEmail": false
  }
}
